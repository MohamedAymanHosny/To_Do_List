<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
    <!-- Title TextView: Displays the main title of the app -->
    <TextView
        android:id="@+id/title"
        android:layout_width="247dp"
        android:layout_height="135dp"
        android:layout_centerInParent="true"
        android:text="To Do List App: Keep Track of all your tasks"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="32dp" />

    <!-- Fixed width for the title 12-->
    <!-- Fixed height for the title 13-->
    <!-- Centers the title in the parent layout 14-->
    <!-- Main title text 15-->
    <!-- ARGB color for the text 16-->
    <!-- Font size for the title 18-->
    <!-- Bold style applied to the text 19-->
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Add"
        android:textSize="40dp"
        android:textColor="#000000"/>

         <!-- Width adjusts to the content 31-->
         <!-- Height adjusts to the content 32-->
         <!-- Aligns the button at the bottom of the parent 33-->
         <!-- Centers the button horizontally 34-->
         <!-- Adds a 20dp margin at the bottom 35-->
         <!-- Button label 36-->
         <!-- Font size for the button text 37-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scrollbars="none">

        <!-- Matches the width of the parent 46-->
        <!-- Matches the height of the parent 47-->
        <!-- Leaves space above the Add button 48-->
        <!-- Disables visible scrollbars 49-->
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Matches parent width 57-->
        <!-- Height adjusts to the content 58-->
        <!-- Places child elements in a vertical layout 59-->
    </ScrollView>
</RelativeLayout>
